<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >



        <ImageView
            android:id="@+id/pswd_ic"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/pswd"
            android:layout_marginTop="5dp"
            android:paddingTop="20dp"
            />

        <EditText
            android:id="@+id/hostpswd"
            android:background="@drawable/customborder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/pswd_ic"


            />

        <Button
            android:id="@+id/button_pswd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="Check"
            android:layout_toEndOf="@id/hostpswd"
            android:textSize="10dp"
            android:background="@drawable/button"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/name_ic"
            android:layout_width="55dp"
            android:layout_marginTop="5dp"
            android:layout_height="55dp"
            android:src="@drawable/person"
            android:paddingTop="20dp"
            android:layout_below="@id/hostpswd"
            />
        <EditText
            android:id="@+id/hostname"
            android:background="@drawable/customborder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hostpswd"
            android:layout_toEndOf="@id/name_ic"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="20dp"
            android:hint="@string/Name"
            />


        <ImageView
            android:id="@+id/mobile_ic"
            android:layout_width="55dp"
            android:layout_marginTop="5dp"
            android:layout_height="55dp"
            android:src="@drawable/mobile"
            android:paddingTop="20dp"
            android:layout_below="@id/hostname"
            />
        <EditText
            android:id="@+id/hostcontact"
            android:background="@drawable/customborder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hostname"
            android:layout_toEndOf="@id/mobile_ic"
            android:ems="10"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:hint="@string/Contact"
            />


        <ImageView
            android:id="@+id/email_ic"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            android:src="@drawable/email"
            android:layout_below="@id/hostcontact"
            android:paddingTop="20dp"
            />
        <EditText
            android:id="@+id/hostemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_toEndOf="@id/email_ic"
            android:inputType="textEmailAddress"
            android:hint="@string/Email"
            android:background="@drawable/customborder"
            android:layout_marginTop="20dp"
            android:layout_below="@id/hostcontact"

            />

        <Button
            android:id="@+id/hostsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Update Details"
            android:layout_below="@id/hostemail"
            android:textSize="20dp"
            android:background="@drawable/button"
            android:layout_centerHorizontal="true"
            />




    </RelativeLayout>
</ScrollView>